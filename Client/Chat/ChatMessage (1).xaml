<UserControl x:Class="Client.Chat.ChatMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             MinWidth="80" MinHeight="40" MaxWidth="300" VerticalAlignment="Top">
    <Border x:Name="border_msg" CornerRadius="5" BorderBrush="Black" Background="Red">
        <TextBlock x:Name="text_message" Text="" Margin="5,5,5,5" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBlock>
    </Border>
</UserControl>
